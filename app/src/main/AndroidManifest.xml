<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ye.actionbarlesson">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/CustomActionBarTheme">
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".second" android:parentActivityName=".MainActivity"
                  android:label="@string/app_childname" android:theme="@style/CustomActionBarTheme"
                  android:logo="@drawable/second_logo">
           <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
            <!--&lt;!&ndash;  meta-data 用于支持 support 4.0 以及以下来指明上级活动 &ndash;&gt;
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ye.actionbarlesson.MainActivity" />-->

        </activity>
    </application>

</manifest>